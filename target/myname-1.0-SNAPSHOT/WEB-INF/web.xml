<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>controladorvehiculo</servlet-name>
        <servlet-class>com.controler.controladorvehiculo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controladorusuario</servlet-name>
        <servlet-class>com.controler.controladorusuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controladorpersona</servlet-name>
        <servlet-class>com.controler.controladorpersona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.controler.login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controladorvehiculo</servlet-name>
        <url-pattern>/vista/controladorvehiculo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controladorusuario</servlet-name>
        <url-pattern>/vista/controladorusuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controladorpersona</servlet-name>
        <url-pattern>/vista/controladorpersona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
